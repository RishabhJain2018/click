<?xml version="1.0" encoding="utf-8"?>
    <ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="16dp">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/Course_img"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:layout_weight="6"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:text="Course"
                        android:textSize="16dp"
                        android:textColor="@color/colorGrey"
                        android:paddingLeft="8dp"/>

                </LinearLayout>

                <EditText
                    android:id="@+id/etCourse"
                    android:layout_weight="4"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:enabled="false"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/Branch_img"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:layout_weight="6"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:text="Branch"
                        android:textSize="16dp"
                        android:textColor="@color/colorGrey"
                        android:paddingLeft="8dp"/>
                </LinearLayout>

                <EditText
                    android:id="@+id/etBranch"
                    android:layout_weight="4"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:enabled="false"/>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/Year_img"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:layout_weight="6"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:text="Year"
                        android:textSize="16dp"
                        android:textColor="@color/colorGrey"
                        android:paddingLeft="8dp"/>

                </LinearLayout>

                <EditText
                    android:id="@+id/etYear"
                    android:layout_weight="4"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:enabled="false"/>




                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/Section_img"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:layout_weight="6"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:text="Section"
                        android:textSize="16dp"
                        android:textColor="@color/colorGrey"
                        android:paddingLeft="8dp"/>

                </LinearLayout>

                <EditText
                    android:id="@+id/etSection"
                    android:layout_weight="4"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:enabled="false"/>



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/UnivRollNo_img"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:layout_weight="6"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:text="University Roll No."
                        android:textSize="16dp"
                        android:textColor="@color/colorGrey"
                        android:paddingLeft="8dp"/>

                </LinearLayout>

                <EditText
                    android:id="@+id/etUnivRollNo"
                    android:layout_weight="4"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:enabled="false"/>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/ContactNo_img"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:layout_weight="6"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:text="Contact No"
                        android:textSize="16dp"
                        android:textColor="@color/colorGrey"
                        android:paddingLeft="8dp"/>


                </LinearLayout>


                <EditText
                    android:id="@+id/etContactNo"
                    android:layout_weight="4"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:enabled="false"/>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/FatherName_img"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:layout_weight="6"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:text="Father's name"
                        android:textSize="16dp"
                        android:textColor="@color/colorGrey"
                        android:paddingLeft="8dp"/>

                </LinearLayout>


                <EditText
                    android:id="@+id/etFatherName"
                    android:layout_weight="4"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:enabled="false"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/MotherName_img"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:layout_weight="6"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:text="Mother's name"
                        android:textSize="16dp"
                        android:textColor="@color/colorGrey"
                        android:paddingLeft="8dp"/>

                </LinearLayout>

                <EditText
                    android:id="@+id/etMotherName"
                    android:layout_weight="4"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:enabled="false"/>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/Address_img"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:layout_weight="6"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:text="Address"
                        android:textSize="16dp"
                        android:textColor="@color/colorGrey"
                        android:paddingLeft="8dp"/>

                </LinearLayout>

                <EditText
                    android:id="@+id/etAddress"
                    android:layout_weight="4"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:enabled="false"/>

        </LinearLayout>

    </ScrollView>
