<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Faculty Profile"
                    android:textSize="22dp"
                    android:textColor="#000000"
                    android:padding="10dp"
                    android:layout_centerVertical="true"/>

                <Button
                    android:id="@+id/bEditF"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Edit"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"/>

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="10"
                >

                <TextView
                    android:layout_weight="6"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="Designation:"
                    android:textSize="19dp"
                    android:textColor="#000000"
                    android:paddingLeft="2dp"/>

                <EditText
                    android:id="@+id/etDesignationF"
                    android:layout_weight="4"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="10"
                >

                <TextView
                    android:layout_weight="6"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="Department:"
                    android:textSize="19dp"
                    android:textColor="#000000"
                    android:paddingLeft="2dp"/>

                <EditText
                    android:id="@+id/etDepartmentF"
                    android:layout_weight="4"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="10"
                >

                <TextView
                    android:layout_weight="6"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="Contact No:"
                    android:textSize="19dp"
                    android:textColor="#000000"
                    android:paddingLeft="2dp"/>

                <EditText
                    android:id="@+id/etContactF"
                    android:layout_weight="4"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="10"
                >

                <TextView
                    android:layout_weight="6"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="Address:"
                    android:textSize="19dp"
                    android:textColor="#000000"
                    android:paddingLeft="2dp"/>

                <EditText
                    android:id="@+id/etAddressF"
                    android:layout_weight="4"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="10"
                >

                <TextView
                    android:layout_weight="6"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="Alternate e-mail:"
                    android:textSize="19dp"
                    android:textColor="#000000"
                    android:paddingLeft="2dp"/>

                <EditText
                    android:id="@+id/etAltEmailF"
                    android:layout_weight="4"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    />

            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="3dp">

                <CheckBox
                    android:id="@+id/cbDisplayF"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Display to others"
                    android:textSize="19dp"
                    android:layout_centerVertical="true"/>

                <Button
                    android:id="@+id/bSaveF"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Save Changes"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"/>

            </RelativeLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>